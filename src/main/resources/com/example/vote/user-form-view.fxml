<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vote.controller.UserFormController">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="20.0" spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label fx:id="titleLabel" text="Add New User" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                
                <GridPane hgap="10.0" vgap="15.0">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="100.0" prefWidth="120.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="250.0" />
                    </columnConstraints>
                    
                    <Label text="Username:" GridPane.rowIndex="0" />
                    <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    
                    <Label text="Full Name:" GridPane.rowIndex="1" />
                    <TextField fx:id="fullnameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    
                    <Label text="Email:" GridPane.rowIndex="2" />
                    <TextField fx:id="emailField" promptText="Enter email address" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    
                    <Label text="Password:" GridPane.rowIndex="3" />
                    <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    
                    <Label text="Confirm Password:" GridPane.rowIndex="4" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    
                    <Label text="Role:" GridPane.rowIndex="5" />
                    <ComboBox fx:id="roleComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                </GridPane>
                
                <Label fx:id="passwordNoteLabel" text="Leave password fields empty to keep the current password" textFill="#757575" visible="false" wrapText="true">
                    <font>
                        <Font style="italic" size="12.0" />
                    </font>
                </Label>
                
                <Label fx:id="messageLabel" textAlignment="CENTER" textFill="#e53935" wrapText="true">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                
                <HBox alignment="CENTER" spacing="20.0">
                    <Button fx:id="saveButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSave" prefWidth="100.0" style="-fx-background-color: #4CAF50;" text="Save" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                    <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" prefWidth="100.0" style="-fx-background-color: #9E9E9E;" text="Cancel" textFill="WHITE">
                        <font>
                            <Font size="14.0" />
                        </font>
                    </Button>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
