<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vote.controller.ForgotPasswordController">
   <children>
      <VBox alignment="CENTER" layoutX="150.0" layoutY="75.0" prefHeight="250.0" prefWidth="300.0" spacing="15.0">
         <children>
            <Label text="Forgot Password" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Enter your email address to receive a password reset OTP" textAlignment="CENTER" textFill="#757575" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" promptText="Email Address" />
            <Label fx:id="messageLabel" textFill="#e53935" wrapText="true">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <Button fx:id="sendOtpButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSendOTP" prefWidth="200.0" style="-fx-background-color: #2196f3;" text="Send OTP" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="backToLoginButton" mnemonicParsing="false" onAction="#switchToLogin" prefWidth="200.0" style="-fx-background-color: transparent; -fx-border-color: #2196f3;" text="Back to Login" textFill="#2196f3">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
