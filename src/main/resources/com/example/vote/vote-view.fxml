<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.vote.controller.VoteController">
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #27ae60;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Cast Your Vote">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Text>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="electionTitleLabel" text="Election Title" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select a candidate to vote for:">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Text>
                
                <Label fx:id="alreadyVotedLabel" style="-fx-text-fill: red; -fx-font-weight: bold;" text="You have already voted in this election!" visible="false">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Label>
                
                <TableView fx:id="candidatesTableView" prefHeight="300.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="200.0" text="Name" />
                        <TableColumn fx:id="positionColumn" prefWidth="150.0" text="Position" />
                        <TableColumn fx:id="infoColumn" prefWidth="300.0" text="Information" />
                    </columns>
                </TableView>
                
                <HBox alignment="CENTER" spacing="20.0">
                    <padding>
                        <Insets top="15.0" />
                    </padding>
                    <children>
                        <Button fx:id="submitButton" defaultButton="true" mnemonicParsing="false" onAction="#handleSubmitVote" prefWidth="120.0" style="-fx-background-color: #27ae60;" text="Submit Vote" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Button>
                        <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" prefWidth="120.0" text="Cancel">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <children>
                <Label fx:id="statusLabel" text="Select a candidate to vote" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
