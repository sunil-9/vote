<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.example.vote.controller.UserDashboardController">
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #27ae60;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="User Dashboard">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Text>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="welcomeLabel" text="Welcome, User" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" text="Logout" />
            </children>
        </HBox>
    </top>
    <left>
        <VBox prefHeight="200.0" prefWidth="150.0" style="-fx-background-color: #ecf0f1;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <Button fx:id="voteButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleVote" text="Vote Now">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="electionsButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleElections" text="Elections">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Button>

                <Button fx:id="profileButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleProfile" text="My Profile">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </left>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to the Voting System">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Text>
                
                <TitledPane animated="false" collapsible="false" text="Active Elections" VBox.vgrow="ALWAYS">
                    <content>
                        <VBox spacing="10.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <ListView fx:id="electionsListView" prefHeight="200.0" />
                                <Label text="Select an election from the list and click 'Vote Now' to participate" />
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                
                <HBox alignment="CENTER" spacing="20.0">
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                    <children>
                        <VBox alignment="CENTER" style="-fx-background-color: #3498db; -fx-background-radius: 5;">
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                            <children>
                                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Your Total Votes">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Text>
                                <Text fx:id="totalVotesText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="0">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Text>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER" style="-fx-background-color: #e67e22; -fx-background-radius: 5;">
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                            <children>
                                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Active Elections">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Text>
                                <Text fx:id="activeElectionsText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="0">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Text>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <children>
                <Label fx:id="statusLabel" text="Ready" />
            </children>
        </HBox>
    </bottom>
</BorderPane>
