<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vote.controller.ElectionFormController">
    <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        
        <Label text="Election Details" styleClass="title-label">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        
        <GridPane hgap="10.0" vgap="15.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" prefWidth="400.0" />
            </columnConstraints>
            
            <!-- Election Title -->
            <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="titleField" promptText="Enter election title" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <!-- Election Description -->
            <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextArea fx:id="descriptionArea" promptText="Enter election description" wrapText="true" prefHeight="80.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <!-- Start Date -->
            <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <DatePicker fx:id="startDatePicker" promptText="Select start date" />
                <ComboBox fx:id="startHourCombo" prefWidth="70.0" promptText="Hour" />
                <Label text=":" />
                <ComboBox fx:id="startMinuteCombo" prefWidth="70.0" promptText="Min" />
            </HBox>
            
            <!-- End Date -->
            <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <HBox spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <DatePicker fx:id="endDatePicker" promptText="Select end date" />
                <ComboBox fx:id="endHourCombo" prefWidth="70.0" promptText="Hour" />
                <Label text=":" />
                <ComboBox fx:id="endMinuteCombo" prefWidth="70.0" promptText="Min" />
            </HBox>
            
            <!-- Status -->
            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <ComboBox fx:id="statusCombo" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>
        
        <Region VBox.vgrow="ALWAYS" />
        
        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Label fx:id="errorLabel" textFill="RED" HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" prefWidth="100.0" />
            <Button fx:id="saveButton" onAction="#handleSave" text="Save" prefWidth="100.0" defaultButton="true" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        </HBox>
    </VBox>
</AnchorPane>
